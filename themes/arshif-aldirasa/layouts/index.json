{{- /* ملف index.json لتوليد بيانات الموقع */ -}}
[
{{- $pages := where .Site.RegularPages "Type" "not in" (slice "page") -}}
{{- range $i, $p := $pages -}}
  {{- if $i}},{{ end -}}
  {
    "title": {{ $p.Title | jsonify }},
    "url": {{ $p.RelPermalink | jsonify }},
    "date": {{ $p.Date.Format "2006-01-02" | jsonify }},
    "summary": {{ $p.Summary | jsonify }},
    "tags": {{ $p.Params.tags | jsonify }}
  }
{{- end -}}
]
